<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".views.HovedmenuActivity"
    android:background="#6577ff">

    <ImageButton
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:id="@+id/OverskriftBillede"
        android:src="@drawable/hangman_main_menu_pic"
        android:background="#6577ff"
        android:layout_marginBottom="6dp"
        android:layout_weight="2"
        />


    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Spil"
        android:id="@+id/spilKnap"
        android:elegantTextHeight="false"
        android:layout_gravity="center_vertical"
        android:background="@color/colorAccent"
        android:textColor="#ffffff"
        android:elevation="1dp"
        android:layout_margin="6dp" />


    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="High Scores"
        android:id="@+id/highscoreKnap"
        android:elevation="1dp"
        android:background="@color/colorPrimaryDark"
        android:textColor="#ffffff"
        android:layout_margin="6dp" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Indstillinger"
        android:id="@+id/IndstillingerKnap"
         android:elevation="1dp"
        android:background="@color/colorPrimaryDark"
        android:textColor="#ffffff"
        android:layout_margin="6dp" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Feedback"
        android:id="@+id/feedbackKnap"
        android:fontFamily="text"
        android:typeface="serif"
        android:elevation="1dp"
        android:background="@color/colorPrimaryDark"
        android:textColor="#ffffff"
        android:layout_margin="6dp" />


</LinearLayout>
