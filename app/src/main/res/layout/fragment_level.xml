<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             tools:context=".views.Level_fragment"

              android:gravity="center_vertical|bottom|center_horizontal">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Let"
        android:id="@+id/letButton"
        android:layout_gravity="center_vertical"
        android:visibility="gone"

        android:background="#00C853"
        android:layout_marginBottom="15dp"
        android:layout_weight="1"
        android:gravity="center_vertical|center_horizontal"
        android:layout_above="@+id/dr" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="middel"
        android:id="@+id/middelButton"
        android:visibility="gone"
        android:background="#FF9800"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:gravity="center_vertical|center_horizontal"
        android:layout_below="@+id/letButton" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="svær"
        android:id="@+id/sværButton"
        android:visibility="gone"

        android:layout_marginTop="15dp"
        android:background="#01579B"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:gravity="center_vertical|center_horizontal"
        android:layout_below="@+id/middelButton" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ord fra DR"
        android:id="@+id/dr"
        android:visibility="gone"

        android:layout_marginTop="15dp"
        android:background="#01579B"
        android:textColor="#ffffff" />


</RelativeLayout>