<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".views.HovedmenuActivity">

    <ImageButton
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/OverskriftBillede"
        android:src="@drawable/hangman_main_menu_pic"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Spil"
        android:id="@+id/spilKnap"/>


    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="High Scores"
        android:id="@+id/highscoreKnap"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Indstillinger"
        android:id="@+id/IndstillingerKnap"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Feedback"
        android:id="@+id/feedbackKnap"/>

</LinearLayout>
